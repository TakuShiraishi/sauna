<%= render 'layouts/header'%>
<div class="container">
  <div class="card text-center">
    <div class="card-header">
      <%= @user.name %>さんの投稿一覧ページ
    </div>
    <div class="card-body">
      <div class="row">
        <% @saunas.each do |sauna| %>
        <div class="col-12 col-sm-6 col-md-4 mb-3">
          <div class="card">
            <div class="card-header">
              <strong><%= sauna.name %></strong></br>
            </div>
            <div class="card-body">
              <%= image_tag sauna.get_profile_image(100,100) %></br>
              <ul class="list-group list-group-flush">
              	<li class="list-group-item">レビュー:</br><%= sauna.comment %></li>
              	<li class="list-group-item">住所:<%= sauna.post_code %></br><%= sauna.prefecture %><%= sauna.place %><%= sauna.address %></li>
              	<li class="list-group-item">サウナ室温度:<%= sauna.temperature %>度</li>
              	<li class="list-group-item">入浴料:<%= sauna.price %>円</li>
              	<li class="list-group-item">利用時間:<%= sauna.time %>時間</li>
              	<li class="list-group-item">定休日:<%= sauna.holiday %>曜日</li>
              	<li class="list-group-item">投稿日:<%= I18n.l sauna.created_at %></li>
                <!--lだけではNoMethodErrorになる。-->
                <!--その場合は、lの代わりにI18n.l-->
                <li class="list-group-item"><%= link_to '詳細', admin_sauna_path(sauna.id), class: "btn btn-sm btn-success"%>
                <%= link_to '削除',admin_sauna_path(sauna.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></li>
               </ul>
              </div>
             </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
</div>
<%= render 'layouts/footer'%>