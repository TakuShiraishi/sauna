<%= render 'layouts/header'%>
<div class=" container">
  <div class="card text-center">
    <div class="card-header">
      <h4>ユーザー一覧</h4>
     </div>
      <div class="card-body">
        <div class="row">
    	   <% @users.each do |user| %>
          <div class="col-12 col-sm-6 col-md-4 mb-3 ">
            <div class="card">
              <div class="card-header">
                <p class="card-text"><%= image_tag user.get_profile_image  %></p>
                <h5 class="card-title">名前:<%= user.name %></h5>
                <p class="card-text"><%= link_to "マイページ",admin_user_path(user.id) %></p>
              </div>
            </div>
          </div>
          <% end %>
        </div>
    <%= paginate @users, theme: 'bootstrap-5'%>
     </div>
  </div>
</div>
<%= render 'layouts/footer'%>