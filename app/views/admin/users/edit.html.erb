<%= render 'layouts/header'%>
<div class="container">
  <div class="row">
    <div class="col-md-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <div class="card text-center">
       <div class="card-header">
        <%= @user.name %>さんの会員情報編集
       </div>
        <div class="card-body">
        	<%= form_with model: @user, url: admin_user_path(@user), method: :patch do |f| %>
        	  </br><label>プロフィール画像</label>
						</br><%= f.file_field :profile_image, class: "form-control profile_image" %></br>
						<label>ニックネーム</label>
						</br><%= f.text_field :name, class: "form-control name" %></br>
						<label>年齢</label>
						</br><%= f.text_field :birth_date, class: "form-control birth_date", placeholder: "数字のみ記入お願いします" %></br>
						<label>性別</label>
						</br><%= f.text_field :gender, class: "form-control gender" %></br>
            <label>メールアドレス</label>
						</br><%= f.text_field :email, class: "form-control email" %></br>
            </br><label>会員ステータス</label>
            <div><%= link_to '退会させる', admin_user_unsubscribe_path(@user.id), class: "glyphicon glyphicon-tint btn btn-danger"%></div>
            <div><%= f.submit '変更を保存'%></div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div
<%= render 'layouts/footer'%>
