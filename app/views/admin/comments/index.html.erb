<%= render 'layouts/header'%>
<div class="container">
  <div class="card text-center">
    <div class="card-header">
      <%= @sauna.name %>コメント一覧ページ
    </div>
      <div class="card-body">
    　   <div class="row">
        	<% @comments.each do |comment| %>
        	<div class="col-12 col-sm-6 col-md-4 mb-3">
        	  <div class="card">
        	    <div class="card-header">
        	      <ul class="list-group list-group-flush">
        	       <li class="list-group-item"><%= comment.comment %></li>
                  <li class="list-group-item"><%= comment.user.name %></li>
                  <li class="list-group-item">年齢:<%= comment.user.birth_date %></li>
                  <li class="list-group-item"><%= I18n.l comment.user.created_at %></li>
                  <li class="list-group-item"><%= link_to '削除',admin_sauna_comment_path(@sauna.id,comment.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></li>
                 </ul>
               </div>
             </div>
           </div>
            <% end %>
         </div>
       </div>
    </div>
</div>
<%= render 'layouts/footer'%>