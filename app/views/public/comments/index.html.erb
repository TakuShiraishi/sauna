<%= render 'layouts/header'%>
<h2>コメント一覧ページ</h2>
<div id="post_raty"></div>
<div id="favorite_btn_<%= @sauna.id %>"></div>
 <%= render 'public/favorites/favorite', sauna: @sauna %>
<table class="table table-hover table-inverse">
   <thead>
     <tr>
       <th>コメント日時</th>
       <th>ニックネーム</th>
       <th>年齢</th>
       <th>性別</th>
       <th>コメント内容</th>
 　　　 </tr>
  </thead>
  <tbody>
       <% @comments.each do |comment| %>
     <tr>
       <td><%= I18n.l comment.user.created_at %></td>
       <td><%= comment.user.name %></td>
       <td><%= comment.user.birth_date %></td>
       <td><%= comment.user.gender %></td>
       <td><%= comment.comment %></td>
     </tr>
      <% end %>
  </tbody>
</table>
<script>
  var elem = document.getElementById('post_raty');
  var opt = {
    score: <%= @sauna.star || 0 %>,
    starOn: "<%= asset_path('star-on.png') %>",
    starOff: "<%= asset_path('star-off.png') %>",
    starHalf: "<%= asset_path('star-half.png') %>",
  };
  raty(elem,opt);
</script>
<%= render 'layouts/footer'%>