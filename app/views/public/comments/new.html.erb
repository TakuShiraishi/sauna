<div class="container">
<div class="row">
  <div class="col-md-12 col-md-12 col-lg-6 px-6 px-sm-0 mx-auto">
    <div class="card text-center">
      <div class="card-header">
        <h4>コメントを書き込む</h4>
      </div>
        <div class="card-body">
          <div class="row">
            <%= form_with model: [@sauna, @comment], local: true do |f| %>
            <div class="card-header">
              <%= f.text_area :comment, rows: '8',cols: '50', placeholder: "コメントを入力" %>
              <%= f.submit "送信する",class:"btn btn-primary"%>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>