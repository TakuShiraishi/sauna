<%= render 'layouts/header'%>
<table>
<div class="container">
  <div class="row md-5">
       <h2 class="table-secondary">マイページ</h2>
      </div>
    </div>
  </div>
  <div class="row my-3">
    <div class="my_page_btn col-2">
        <h3>登録情報</h3>
            <div class="row mt-3">
              <div class="col-sm-8">
                <table class="table table-bordered">
                  <tbody>
                    <tr>
                      <td class="information col-3 table-secondary">画像</td>
                      <td><%= image_tag @user.get_profile_image  %></td>
                    </tr>
                    <tr>
                      <td class="information col-3 table-secondary">ニックネーム</td>
                      <td><%= @user.name %></td>
                    </tr>
                    <tr>
                      <td class="information col-3 table-secondary">年齢</td>
                      <td><%= @user.birth_date %>歳</td>
                    </tr>
                    <tr>
                      <td class="information col-3 table-secondary">性別</td>
                      <td><%= @user.gender %></td>
                    </tr>
                    <tr>
                      <td class="information col-3 table-secondary">メールアドレス</td>
                      <td><%= @user.email %></td>
                    </tr>
                    <tr>
                      <td class="information col-3 table-secondary">フォロー</td>
                      <td><%= link_to @user.followings.count, user_followings_path(@user) %></td>
                    </tr>
                    <tr>
                      <td class="information col-3 table-secondary">フォロワー</td>
                      <td><%= link_to @user.followers.count, user_followers_path(@user) %></td>
                    </tr>
                  </tbody>
                </table>
              </div>
              <% if @user == current_user && @user.name != "guestuser"%>
　　　　　　　<span><%= link_to "編集する", edit_user_path, class: " item_show_btn btn btn-success" %></span>
              <% else %>
              <% end %>
              <span><%=link_to"お気に入り記事",favorites_user_path(@user), class: "favorites_user_btn btn btn-success" %></span>
             <span><%= link_to "個室サウナを投稿する",  new_sauna_path, class: " new_sauna_btn btn btn-success" %></span>
          </div>
        </div>
      </div>
   <%= render 'layouts/footer'%>
