<%= render 'layouts/header'%>

<h2>ユーザー編集画面</h2>
<%= form_with model:@user, local:true do |f| %>
<div class="form-group">
	<%= f.label "プロフィール画像" %>
	<%= f.file_field :profile_image, class: "form-control name" %>
</div>
<div class="form-group">
	<%= f.label "ニックネーム" %>
	<%= f.text_field :name, class: "form-control name" %>
</div>
<div class="form-group">
	<%= f.label "年齢" %>
	<%= f.text_field :birth_date, class: "form-control name" %>
</div>
<div class="form-group">
	<%= f.label "性別" %>
	<%= f.text_field :gender, class: "form-control name" %>
</div>
<div class="form-group">
	<%= f.label "メールアドレス" %>
	<%= f.email_field :email, class: "form-control name" %>
</div>
<div class="form-group">
	<%= f.submit "変更",class: "btn btn-secondary" %>
</div>
<% end %>


<%= render 'layouts/footer'%>
