<%= render 'layouts/header'%>
<div class="container p-5">
　<div class="row">
　  <div class="col-md-12 col-md-8 col-lg-7 px-7 px-sm-0 mx-auto">
　    <div class="card text-center">
　      <div class="card-header">
　        ログイン
　        </div>
　        <div class="card-body">
　          <%= form_with  model: @user, url:  user_session_path do |f| %>
　          <ul class="list-group list-group-flush">
　            <li class="list-group-item">
　              <%= f.label "メールアドレス" , class:"col-md-7"%>
　              <%= f.email_field :email, class:"col-md-7"%>
　             </li>

　             <li class="list-group-item">
　              <%= f.label "パスワード" , class:"col-md-7"%>
　              <%= f.password_field :password, autocomplete: "current-password", class:"col-md-7" %>
　             </li>
　             <div>
                 <% if devise_mapping.rememberable? %>
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                  </div>
                </div>
                <% end %>
                </div>
　             <li class="list-group-item">
　               <%= f.submit "ログイン",class: "btn btn-outline-success"  %>
　             </li>
　             <li class="list-group-item">
　                <%= link_to "こちら", new_user_registration_path %>　から新規登録を行なってください。
　             </li>
　             <% end %>
　           </ul>
　         </div>
　       </div>
　   </div>
  </div>
</div>
<%= render 'layouts/footer'%>