<%= render 'layouts/header'%>
<div class="container">
　<div class="row">
　  <div class="col-lg-10 md-auto my-5 ">
　    <h2>ログイン</h2>
　    <div class="row">

　      <div class="col-lg-10 mx-auto">
　        <%= form_with  model: @user, url:  user_session_path do |f| %>
　        <div class="row mb-2">
　          <div class="col-lg-3">
　            <%= f.label "メールアドレス" %>
　          </div>
　          <div class="col-lg-7">
　            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
　          </div>
　        </div>
　        <div class="row mb-2">
　          <div class="col-lg-3">
　            <%= f.label "パスワード" %>
　          </div>
　          <div class="col-lg-7">
　            <%= f.password_field :password, autocomplete: "current-password" %>
　          </div>
　        </div>
　        <div class="row mb-2">
　          <% if devise_mapping.rememberable? %>
　          <div class="col-lg-3"></div>
　          <div class="col-lg-7">
　            <%= f.check_box :remember_me %>
　            <%= f.label :remember_me %>
　          </div>
　          <% end %>
　          </div>
　          <div class="actions">
            <%= f.submit "ログイン" %>
           </div>
          <% end %>

           <%= link_to "こちら", new_user_registration_path %>　から新規登録を行なってください。
      　</div>
    </div>
  </div>
 </div>
</div>

       <%= render 'layouts/footer'%>