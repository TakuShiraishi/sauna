<%= render 'layouts/header'%>
<div class="container p-5">
  <div class="row">
    <div class="col-md-12 col-md-8 col-lg-7 px-7 px-sm-0 mx-auto">
      <div class="card text-center ">
        <div class="card-header">
          <h4>新規会員登録</h4>
          </div>
          <div class="card-body">
            <%= form_with model: @user, url: user_registration_path do |f| %>
            <%= render "public/shared/error_messages", resource: resource %>
           <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <%= f.label "ニックネーム", class:"col-md-7" %>
              <%= f.text_field :name, class:"col-md-7"%>
            </li>

            <li class="list-group-item">
              <%= f.label "メールアドレス", class:"col-md-7" %>
              <%= f.email_field :email, class:"col-md-7" %>
            </li>

            <li class="list-group-item">
              <% if @minimum_password_length %>
              <%= f.label :"パスワード(#{ @minimum_password_length }文字以上)",class:"col-md-7" %></br>
              <% else %>
              <%= f.label :"パスワード",class:"col-md-7" %>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password",class:"col-md-7" %>
            </li>

            <li class="list-group-item">
              <%= f.label :"パスワード(確認用)",class:"col-md-7" %></br>
              <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"col-md-7" %>
            </li>

            <li class="list-group-item">
              <%= f.submit "新規会員登録",class: "btn btn-outline-success" %>
            </li>
              <li class="list-group-item">
              <%= link_to "こちら", new_user_session_path %>からログインしてください
           </li>
           <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render 'layouts/footer'%>
