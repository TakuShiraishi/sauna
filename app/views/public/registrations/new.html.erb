<%= render 'layouts/header'%>
<div class="cotainer">
  <h4 class="py-2 px-4 bg-light">新規会員登録</h4>
  <div class="col-md-10">
  <%= form_with model: @user, url: user_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="row-md-3">
    <%= f.label "ニックネーム", class:"col-md-9" %>
    <%= f.text_field :name, class:"col-md-3"%>
  </div>

  <div class="row-md-3">
    <%= f.label "メールアドレス", class:"col-md-9" %>
    <%= f.email_field :email, class:"col-md-3" %>
  </div>

  <div class="row-md-3">
    <% if @minimum_password_length %>
    <%= f.label :"パスワード(#{ @minimum_password_length }文字以上)",class:"col-md-3" %></br>
    <% else %>
    <%= f.label :"パスワード",class:"col-md-3" %>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password",class:"col-md-3" %>
  </div>

  <div class="row-md-3">
    <%= f.label :"パスワード(確認用)",class:"col-md-3" %></br>
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"col-md-3" %>
  </div>

  <div class="rmb-4">
    <%= f.submit "新規会員登録",class: "btn btn-outline-success" %>
  </div>
    <% end %>
    <div class="mb-4">
    <%= link_to "こちら", new_user_session_path %>からログインしてください
    </div>
  </div>
</div>
<%= render 'layouts/footer'%>
