<h2>新規会員登録</h2>

<%= form_with model: @user, url: user_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label "ニックネーム" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label "年齢" %><br />
    <%= f.text_field :birth_date %>
  </div>
  <div class="field">
    <%= f.label "性別" %><br />
    <%= f.text_field :gender %>
  </div>
  <div class="field">
    <%= f.label "メールアドレス" %><br />
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label "パスワード確認用" %><br />
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= f.submit "新規会員登録",class: "btn btn-outline-success" %>
  </div>
<% end %>

<%= link_to "こちら", new_user_session_path %>からログインしてください
