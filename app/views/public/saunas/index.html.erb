<%= render 'layouts/header'%>
<h2>サウナ一覧</h2>
 <%= render 'public/searchs/sauna' %>
 <%= render 'public/searchs/form' %>
    <table class="table table-hover table-inverse">
       <thead>
         <tr>
           <th>投稿者名</th>
           <th>外観</th>
           <th>都道府県</th>
           <th>住所</th>
           <th>個室サウナ名</th>
           <th>サウナ室温度</th>
           <th>入浴料</th>
           <th>利用時間</th>
           <th>定休日</th>
           <th></th>
           <th></th>
           <th></th>
           <th></th>
     　　　 </tr>
      </thead>
      <tbody>
        <% @saunas.each do |sauna| %>
         <tr>
           <td><%= link_to sauna.user.name, user_path(sauna.user) %></td>
           <td><%= image_tag sauna.get_profile_image  %></td>
           <td><%= sauna.prefecture %></td>
           <td><%= sauna.place %></td>
           <td><%= sauna.name %></td>
           <td><%= sauna.temperature %>度</td>
           <td><%= sauna.price %>円</td>
           <td><%= sauna.time %></td>
           <td><%= sauna.holiday %></td>
           <td>レビューを見る: <%= link_to sauna.comments.size,sauna_comments_path(sauna) %></td>
           <td id="favorite_btn_<%= sauna.id %>">
           <%= render 'public/favorites/favorite', sauna: sauna %>
           </td>
           <td><div id="post_raty_<%= sauna.id %>"></div></td>
           <td><%= link_to '詳細', sauna_path(sauna.id), class: "btn btn-sm btn-success" %></td>
         </tr>
      <script>
       $('#post_raty_<%= sauna.id %>').empty();
       var id_str = 'post_raty_' + <%= sauna.id %>;
       var elem = document.getElementById(id_str);
   　　　var opt = {
      　score: <%= sauna.star || 0 %>,
      　starOn: "<%= asset_path('star-on.png') %>",
      　starOff: "<%= asset_path('star-off.png') %>",
      　starHalf: "<%= asset_path('star-half.png') %>",
   　　　};
    　　raty(elem,opt);
　　　</script>
         <% end %>
      </tbody>
    </table>

      <%= render 'layouts/footer'%>
