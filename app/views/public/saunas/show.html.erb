<%= render 'layouts/header'%>
<h2>サウナ詳細画面</h2>
<div class="container">
  <div class="row">
    <div class="col-md-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      </br><label>外観:</label>
  	  </br><%= image_tag @sauna.get_profile_image(500,500), class: "img-fluid"  %></br>
      <label>投稿日時:</label><%= I18n.l @sauna.created_at %>
      <!--lだけではNoMethodErrorになる。-->
      <!--その場合は、lの代わりにI18n.l-->
      <label>個室サウナ名:</label><strong><%= @sauna.name %></strong></br>

  	  </br><label>住所:</label><strong><%= @sauna.prefecture %><%= @sauna.place %></strong></br>

  	  </br><label>サウナ室温度:</label><strong><%= @sauna.temperature %>度</strong>
  	  <label>入浴料:</label><strong><%= @sauna.price %>円</strong></br>

  	  </br><label>利用時間:</label><strong><%= @sauna.time %>時間</strong>
  	  <label>定休日:</label><strong><%= @sauna.holiday %>曜日</strong></br>

  	  </br><label>レビュー:</label></br>
  	  <strong><%= @sauna.comment %></strong></br>
      <div id="post_raty"></div>
      <% if @sauna.user == current_user %>
      <div><%= link_to '削除',sauna_path(@sauna.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
      <%= link_to '編集', edit_sauna_path(@sauna), class: "btn btn-sm btn-success" %></div>
      <% else %>
      <% end %>
  　　<div><%= link_to 'コメントを書く', new_sauna_comment_path(@sauna), class: "btn btn-sm btn-success" %></div>
      <script>
         $('#post_raty').empty();
        var elem = document.getElementById('post_raty');
        var opt = {
          score: <%= @sauna.star || 0 %>,
          starOn: "<%= asset_path('star-on.png') %>",
          starOff: "<%= asset_path('star-off.png') %>",
          starHalf: "<%= asset_path('star-half.png') %>",
        };
        raty(elem,opt);
      </script>
   </div>
 </div>
</div>
<%= render 'layouts/footer'%>
