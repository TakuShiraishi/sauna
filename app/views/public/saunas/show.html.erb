<%= render 'layouts/header'%>
<h2>サウナ詳細画面</h2>
    <table class="table table-hover table-inverse">
       <thead>
         <tr>
           <th>外観</th>
           <th>都道府県</th>
           <th>住所</th>
           <th>個室サウナ名</th>
           <th>サウナ室温度</th>
           <th>入浴料</th>
           <th>利用時間</th>
           <th>定休日</th>
           <th>サ活感想</th>
           <th></th>
           <th></th>
     　　　 </tr>
      </thead>
      <tbody>
        <% @saunas.each do |sauna| %>
         <tr>
           <td><%= image_tag sauna.get_profile_image  %></td>
           <td><%= sauna.prefecture %></td>
           <td><%= sauna.place %></td>
           <td><%= sauna.name %></td>
           <td><%= sauna.temperature %></td>
           <td><%= sauna.price %>円</td>
           <td><%= sauna.time %></td>
           <td><%= sauna.holiday %></td>
           <td><%= sauna.comment %></td>
           <td><%= link_to '削除',sauna_path(sauna.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
           <td><%= link_to '編集', edit_sauna_path(sauna), class: "btn btn-sm btn-success" %></td>
         </tr>
         <% end %>
      </tbody>
      </table>
      <%= render 'layouts/footer'%>
