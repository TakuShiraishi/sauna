<%= render 'layouts/header'%>
<%= render 'public/searchs/user' %>
<div class="container">
 <div class="card text-center">
  <div class="card-header">
    検索結果ページ
   </div>
    <div class="card-body">
      <div class="row">
    	<% @users.each do |user| %>
    	 <div class="col-12 col-sm-6 col-md-4 mb-3 ">
        　<div class="card">
          　<div class="card-header">
             <p class="card-text"><%= image_tag user.get_profile_image  %></p>
              <ul class="list-group list-group-flush">
                <li class="list-group-item"><%= user.name %></li>
                <li class="list-group-item"><%= link_to "マイページ",user_path(user.id) %></li>
                <li class="list-group-item"><%= render 'public/relationships/btn', user: user %></li>
              </ul>
            </div>
          </div>
        </div>
        <% end %>
     </div>
  </div>
</div>
<%= render 'layouts/footer'%>