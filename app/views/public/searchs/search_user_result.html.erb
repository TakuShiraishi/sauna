<%= render 'layouts/header'%>
<%= render 'public/searchs/user' %>
<div class="card text-center">
  <div class="card-header">
    検索結果ページ
   </div>
    <div class="card-body">
    	<% @users.each do |user| %>
    	<h5 class="card-title">画像</h5>
      <p class="card-text"><%= image_tag user.get_profile_image  %></p>
      <h5 class="card-title">名前:<%= user.name %></h5>
      <p class="card-text"><%= link_to "マイページ",user_path(user.id) %></p>
      <p class="card-text"><%= render 'public/relationships/btn', user: user %></p>
      <% end %>
    </div>
</div>
<%= render 'layouts/footer'%>